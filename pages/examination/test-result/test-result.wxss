/* pages/examination/test-result/test-result.wxss */

.contentview {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(227, 37, 22, 1), rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stripe {
  margin-top: 50rpx;
  width: 96%;
  height: 34rpx;
  background: linear-gradient(rgba(236, 236, 248, 1), rgba(241, 20, 34, 1));
  box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(0, 0, 0, 0.45);
  border-radius: 17rpx;
}

.contentview2 {
  width: 94%;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(204, 204, 204, 1);
  box-shadow: 0rpx 9rpx 37rpx 0rpx rgba(30, 30, 30, 0.2);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  margin-top: 50rpx;
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.line {
  margin-top: 50rpx;
  width: 90%;
  height: 1rpx;
  background: rgba(51, 51, 51, 1);
}

.line2 {
  margin-top: 30rpx;
  width: 90%;
  height: 1rpx;
  background: rgba(51, 51, 51, 1);
}

.score {
  margin-top: 50rpx;
  color: #333;
  font-weight: bold;
  font-size: 30rpx;
}

.tab-head {
  margin-top: 65rpx;
  width: 96%;
  height: 100rpx;
  border: 1rpx solid rgba(224, 224, 224, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.tab-head2 {
  width: 96%;
  height: 100rpx;
  border-left: 1rpx solid rgba(224, 224, 224, 1);
  border-right: 1rpx solid rgba(224, 224, 224, 1);
  border-bottom: 1rpx solid rgba(224, 224, 224, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.head-text1 {
  width: 80rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  font-size: 28rpx;
  border-right: 1rpx solid #e0e0e0;
}

.head-text2 {
  width: 115rpx;
  text-align: center;
  height: 100rpx;
  line-height: 50rpx;
  color: #333;
  font-size: 28rpx;
  border-right: 1rpx solid #e0e0e0;
}

.head-text3 {
  width: 115rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  font-size: 28rpx;
  border-right: 1rpx solid #e0e0e0;
}

.head-text4 {
  width: 90rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  font-size: 28rpx;
}

.exambtn {
  margin-top: 40rpx;
  height: 88rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.examstart {
  color: #e32516;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  width: 40%;
  height: 88rpx;
  border-radius: 44rpx;
  border: 1rpx solid rgba(240, 6, 21, 1);
}

.examagain {
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  width: 40%;
  height: 88rpx;
  background: rgba(227, 37, 22, 1);
  border-radius: 44rpx;
}

.user-img {
  margin-top: 35rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-name {
  color: #333;
  font-size: 30rpx;
}

.examtime {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}
