/* pages/examination/test-paper/test-paper.wxss */

.contentview {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(227, 37, 22, 1), rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
}

.content {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 0rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 12rpx 15rpx 0rpx rgba(62, 62, 62, 0.28);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scrollview {
  height: 100%;
  width: 100%;
}

.item {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-topic {
  margin-top: 30rpx;
  width: 90%;
  color: #222;
  font-size: 26rpx;
}

.number {
  color: #e3281a;
  font-size: 26rpx;
}

.item-content {
  background: #f5f5f5;
  margin-top: 30rpx;
  width: 90%;
  border-radius: 3rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mine-answer {
  margin-top: 30rpx;
  width: 90%;
  color: #999;
  font-size: 24rpx;
}

.correct-answer {
  margin-top: 30rpx;
  width: 90%;
  color: #666;
  font-size: 24rpx;
  margin-bottom: 30rpx;
}
