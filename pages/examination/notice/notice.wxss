/* pages/examination/notice/notice.wxss */

.contentview {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(227, 37, 22, 1), rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stripe {
  margin-top: 50rpx;
  width: 96%;
  height: 34rpx;
  background: linear-gradient(rgba(236, 236, 248, 1), rgba(241, 20, 34, 1));
  box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(0, 0, 0, 0.45);
  border-radius: 17rpx;
}

.contentview2 {
  width: 94%;
  overflow-y: scroll;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(204, 204, 204, 1);
  box-shadow: 0rpx 9rpx 37rpx 0rpx rgba(30, 30, 30, 0.2);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  margin-top: 50rpx;
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.line {
  margin-top: 50rpx;
  width: 90%;
  height: 2rpx;
  background: rgba(51, 51, 51, 1);
}

.line2 {
  margin-top: 30rpx;
  width: 90%;
  height: 2rpx;
  background: rgba(51, 51, 51, 1);
}

.content {
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
}

.inquire {
  margin-top: 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(227, 37, 22, 1);
  line-height: 36rpx;
  margin-bottom: 30rpx;
}

.exambtn {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  height: 88rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.examstart {
  color: #e32516;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  width: 40%;
  height: 88rpx;
  border-radius: 44rpx;
  border: 1rpx solid rgba(240, 6, 21, 1);
}

.examagain {
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  width: 40%;
  height: 88rpx;
  background: rgba(227, 37, 22, 1);
  border-radius: 44rpx;
}

.examine {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  width: 80%;
  height: 88rpx;
  background: rgba(227, 37, 22, 1);
  border-radius: 44rpx;
}
