/* pages/examination/test/test.wxss */

.contentview {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(227, 37, 22, 1), rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stripe {
  margin-top: 50rpx;
  width: 96%;
  height: 34rpx;
  background: linear-gradient(rgba(236, 236, 248, 1), rgba(241, 20, 34, 1));
  box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(0, 0, 0, 0.45);
  border-radius: 17rpx;
}

.contentview2 {
  width: 94%;
  padding-bottom: 100rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(204, 204, 204, 1);
  box-shadow: 0rpx 9rpx 37rpx 0rpx rgba(30, 30, 30, 0.2);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y: scroll;
}

.title {
  margin-top: 50rpx;
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.line {
  margin-top: 50rpx;
  width: 90%;
  height: 1rpx;
  background: rgba(51, 51, 51, 1);
}

.line2 {
  margin-top: 10rpx;
  width: 90%;
  height: 2rpx;
  background: rgba(51, 51, 51, 1);
}

.topic {
   width: 90%;
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #333;
  font-size: 30rpx;
}

.answer {
  width: 90%;
  margin-top: 50rpx;
  padding: 25rpx;
  /* min-height: 79rpx;
  line-height: 79rpx; */
  text-align: left;
  background: #ff6c65;
  border-radius: 38rpx;
  color: #fff;
  font-size: 30rpx;
  padding-left: 30rpx;
}

.answer-default {
  width: 90%;
  padding: 25rpx;
  margin-top: 50rpx;
  /* min-height: 76rpx;
  line-height: 76rpx; */
  border: 1rpx solid rgba(51, 51, 51, 1);
  border-radius: 38rpx;
  color: #333;
  font-size: 30rpx;
  padding-left: 30rpx;
}

.fill-title {
  margin-top: 180rpx;
  width: 90%;
  color: #333;
  font-size: 30rpx;
}

.input {
  margin-top: 45rpx;
  width: 90%;
  text-align: center;
  color: #333;
  font-size: 30rpx;
}

.next {
  margin-top: 40rpx;
  margin-bottom: 50rpx;
  color: #e32516;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  width: 80%;
  height: 88rpx;
  border: 1px solid rgba(227, 37, 22, 1);
  border-radius: 44rpx;
}
