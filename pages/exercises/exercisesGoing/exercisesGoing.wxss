/* pages/exam/examGoing/examGoing.wxss */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.7;
    -moz-opacity: 0.7;  
  filter: alpha(opacity=70); 
}
page{
  background: #ccc;
  background:url('https://cdn.pluslegal.cn/423p/ques_bg.png')no-repeat;
  background-size:100%; 
}
text{
  color:#333
}
.bgImg{
  position:absolute;
  width:100%;
  z-index: -1;
  height:100%;

}
.contentpage{
  padding:0;
  margin:0;
  display:flex;
flex-direction:column;
height:100%;

}

.questionDetails{
  padding:20rpx 0;
  flex:1;
  min-height:80%;
  overflow-y:scroll;


}
.questionDetails text{
  text-align: left;
  line-height: 1.6;
  padding:0 15rpx;
  font-size:32rpx;
  color:#373E50;
  font-weight:500;
  

}

.questionContent {
  background:#fff;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #ccc;
  border-radius:10px 10px;
  padding:10px;
  position: relative;
  margin:50rpx 30rpx;
 


}
.quetionInfo{
  clear:both;
}
.quetionInfo text{
  float:left;
  color:#ccc;
}
.quetionInfo text.num{
  float:right;
}


.questionDetails .question{
  margin:20rpx 0;
  font-size:36rpx;
}


.case-item {
  background: none;
  padding: 25rpx 30rpx;
  border-radius: 60rpx 60rpx;
  border:1px solid #8B1B23;
  margin: 50rpx 0;
}
.case-item text{
  color:#8B1B23;
}
.correctAnswer {
  background: #8B1B23;
  border-radius: 60rpx 60rpx;
  padding: 25rpx 30rpx;
  margin: 50rpx 0;
  border:1px solid #8B1B23
}

.wrongAnswer {
  background: #F68340;
  border-radius: 60rpx 60rpx;
  padding: 25rpx 30rpx;
  margin: 50rpx 0;
  border:2px solid #F68340;
}
.correctAnswer,.wrongAnswer{
  position:relative;
  padding-left:60rpx;
}
.correctAnswer text,.wrongAnswer text{
  color:#fff;
}
.correctAnswer image,.wrongAnswer image{
  width:38rpx;
  height:36rpx;
  position:absolute;
  left:20rpx;
  top:50%;
  margin-top:-18rpx;
}

.answerAnalysis{
   position: relative;
   box-shadow: 4rpx 4rpx 4rpx 4rpx #ccc;
   margin:50rpx 0;
   padding:20rpx;

}
.answerAnalysis>text{
   margin:15rpx 30rpx;
   color: #333333;
   line-height:1.8;
   font-size:30rpx;
}
.answerAnalysis>image{
  position:absolute;
  bottom:-29rpx;
  left:25%;
  width:36rpx;
  height:30rpx;

}
.nextBtn{
  width:100%;


}
.nextBtn>view{
  width:44%;
  float:left;
  margin:40rpx 3%;

}
.nextBtn>view>image{
  height:100rpx;
  width:100%;
}
