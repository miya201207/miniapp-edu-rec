/* pages/learn/note/note.wxss */

.contentview {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(227, 37, 22, 1), rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
}

.content {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 12rpx 15rpx 0rpx rgba(62, 62, 62, 0.28);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.area {
  width: 100%;
  color: #666;
  font-size: 24rpx;
  line-height: 35px;
}

.save {
  position: absolute;
  bottom: 50rpx;
  color: #e32515;
  text-align: center;
  line-height: 88rpx;
  width: 80%;
  height: 88rpx;
  border: 1rpx solid rgba(240, 6, 21, 1);
  border-radius: 44rpx;
}
