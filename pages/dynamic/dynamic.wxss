/* pages/dynamic/dynamic.wxss */

.title {
  height: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1rpx solid #f5f5f5;
}

.title-text-default {
  color: #999;
  font-size: 34rpx;
}

.title-text {
  color: #222;
  font-weight: bold;
  font-size: 34rpx;
}

.title-line-default {
  margin-top: 20rpx;
  height: 4rpx;
  background: white;
}

.title-line {
  margin-top: 20rpx;
  height: 4rpx;
  background: #ff6c65;
}

.swiper {
  width: 100%;
}

.scrollview-content {
  height: 100%;
  width: 100%;
}

.scroll-item {
  position: relative;
  height: 180rpx;
  width: 100%;
  border-bottom: 1rpx solid #f3f3f3;
}

.scroll-title {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  left: 30rpx;
  height: 90rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 45rpx;
}

.scroll-time {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #999;
}
