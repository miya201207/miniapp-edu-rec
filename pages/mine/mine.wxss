/* pages/mine/mine.wxss */

.contentview {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(227, 37, 22, 1), rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
}

.circle{
  width: 200rpx;
  height: 200rpx;
}

.content {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 12rpx 15rpx 0rpx rgba(62, 62, 62, 0.28);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user {
  width: 100%;
  position: relative;
  height: 227rpx;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  overflow: hidden;
  top: 58rpx;
  left: 35rpx;
}

.user-nick {
  position: absolute;
  top: 81rpx;
  left: 192rpx;
  color: #333;
  font-size: 30rpx;
}

.user-unit {
  position: absolute;
  top: 138rpx;
  left: 193rpx;
  color: #333;
  font-size: 30rpx;
}

.user-edit {
  position: absolute;
  top: 101rpx;
  right: 90rpx;
  height: 36rpx;
  width: 40rpx;
}

.user-amend {
  position: absolute;
  top: 100rpx;
  right: 30rpx;
  color: #999;
  font-size: 30rpx;
}

.user-line {
  background: #f3f3f3;
  width: 100%;
  height: 10rpx;
}

.item {
  position: relative;
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-line {
  width: 90%;
  background: #f3f3f3;
  height: 1rpx;
}

.item-img {
  margin-left: 35rpx;
  height: 36rpx;
  width: 40rpx;
}

.item-img2 {
  position: absolute;
  right: 35rpx;
  height: 36rpx;
  width: 40rpx;
}

.item-text {
  color: #333;
  font-size: 34rpx;
  margin-left: 20rpx;
}

.logout {
  position: absolute;
  bottom: 80rpx;
  color: #e32516;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  width: 80%;
  border: 1rpx solid rgba(240, 6, 21, 1);
  border-radius: 44rpx;
}
