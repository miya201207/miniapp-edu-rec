/* pages/login/tellogin/tellogin.wxss */

.contentview {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(227, 37, 22, 1), rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
}

.content {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 0rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 12rpx 15rpx 0rpx rgba(62, 62, 62, 0.28);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topic {
  width: 90%;
  margin-top: 69rpx;
  color: #333;
  font-size: 36rpx;
}

.hint {
  width: 90%;
  margin-top: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.value {
  width: 90%;
  color: #333;
  margin-top: 133rpx;
  font-size: 30rpx;
}

.line {
  margin-top: 20rpx;
  height: 1rpx;
  background: #999;
  width: 90%;
}

.sure {
  margin-top: 90rpx;
  color: #fff;
  font-size: 30rpx;
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #e32516;
  border-radius: 44rpx;
}

.sure-default {
  color: #999;
  margin-top: 90rpx;
  font-size: 30rpx;
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #f3f3f3;
  border-radius: 44rpx;
}

.code {
  margin-top: 60rpx;
  height: 150rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.number {
  line-height: 117rpx;
  text-align: center;
  width: 117rpx;
  height: 117rpx;
  border: 1rpx solid rgba(153, 153, 153, 1);
  border-radius: 10rpx;
}

.input {
  position: absolute;
  top: 0rpx;
  left: -100%;
  width: 100rpx;
  height: 60rpx;
  color: white;
}

.send-again {
  width: 90%;
  height: 80rpx;
  text-align: right;
  margin-top: 40rpx;
  color: #e32516;
  font-size: 28rpx;
}
