.contentview {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, rgba(227, 37, 22, 1), rgba(255, 255, 255, 1), rgba(255, 255, 255, 1));
}

.content {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 0rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 12rpx 15rpx 0rpx rgba(62, 62, 62, 0.28);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content2{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content3{
  height: 100rpx;
  margin-top: 30rpx;
  color:#fff;
  background: #e32516;
  font-size: 32rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.title-text{
  text-align: center;
  width: 200rpx;
}


.title{
  margin-top: 10rpx;
  color: #333;
  font-weight: bold;
  font-size: 36rpx;
}

.scrollview {
  position: absolute;
  top: 240rpx;
  bottom: 0rpx;
  width: 100%;
}


.item {
  position: relative;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.hour0{
  text-align: center;
  width: 200rpx;
  color: #e32516;
}
.hour1{
  text-align: center;
