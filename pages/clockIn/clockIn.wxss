/* packageA/pages/checkin/checkinHome/checkinHome.wxss */
.checkinContainer{
  padding:20rpx;
}
.weui-cell {
  width:100%;
  margin:0 auto;
  position: relative;
  padding:20rpx;
  display:flex;
  top: 17%;
}
.weui-cell input{
  height:70rpx;
  background: #fff;
  font-size:28rpx;
  color:#666;
  padding:0 15rpx;
  border-radius:10rpx;
  box-shadow: 0px 0px 6px #ccc;
}
.weui-cell  .searchbar{
  position: relative;
  width: 95%;
}

.weui-cell .searchBtn{
  position: absolute;
  right: 10px;
  top: 15rpx;
}
.weui-cell image{
  margin:5rpx 0;
  width:30rpx;
  height:30rpx;
  z-index: 9998;
}

.activityList{
  padding:30rpx; 
}
.activityList .ul>view{
  float:left;
  width:44%;
  height:170rpx;
  line-height:170rpx;
  position: relative;
  text-align:center;
  margin:3%;
  overflow: hidden;
  border-radius: 10rpx;
}

.activityList .ul>view image{
  width:100%;
  position:absolute;
  z-index: -1;
  height:100%;
  top:0;
  left:0; 
}
.activityList .title{
  color:#fff;
  font-size:32rpx;
  font-weight:500;
  position:absolute;
  bottom:0;
  width:100%;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  position: absolute;
  bottom: 0;
  width: 100%;
  left: 0;
  height: 70rpx;
  line-height: 70rpx;
  background:rgba(0,0,0,0.36);
  border-radius:10rpx 10rpx 0 0;
}
.activityList .tojoin{
  color:#fff;
  font-size:26rpx;
  font-weight:500;
  padding: 5rpx 30rpx 8rpx 30rpx;
  background: #E7011B;
  border:2rpx solid #ffff;
  border-radius:40rpx;
}