/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx;
}

.parent {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 9000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-dialog {
  width: 600rpx;
  height: 785rpx;
  overflow: hidden;
  position: fixed;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.imgbg {
  width: 600rpx;
  height: 785rpx;
}

.modal-title {
  width: 90%;
  margin-top: 80rpx;
  font-size: 36rpx;
  color: #fdfaf9;
  text-align: center;
}

.modal-scroll {
  margin-top: 58rpx;
  width: 90%;
  height: 400rpx;
  background: #fff;
  border-radius: 10rpx;
}

.modal-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-text {
  width: 90%;
  height: 90%;
  line-height: 45rpx;
  font-size: 28rpx;
  color: #333;
}

.modal-btn {
  margin-top: 30rpx;
  text-align: center;
  width: 331rpx;
  height: 77rpx;
  line-height: 77rpx;
  background: #e32516;
  border-radius: 39rpx;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 50rpx;
}

.clearfix{ zoom:1;}
.clearfix:after{ clear:both; display:block; content:""; height:0px; overflow:hidden;}
.text-1{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.text-2{
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
}
.text-3{
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
}

